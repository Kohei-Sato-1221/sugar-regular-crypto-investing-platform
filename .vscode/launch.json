{
	"version": "0.2.0",
	"configurations": [

		{
			"name": "Next.js: debug full stack",
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "bun",
			"runtimeArgs": ["run", "dev"],
			"cwd": "${workspaceFolder}/crypto-investing-platform-web",
			"console": "integratedTerminal",
			"skipFiles": ["<node_internals>/**"],
			"env": {
				"NODE_OPTIONS": "--inspect"
			},
			"serverReadyAction": {
				"pattern": "- Local:.+(https?://.+)",
				"uriFormat": "%s",
				"action": "debugWithChrome"
			}
		},
		{
			"name": "Run Tests",
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "bun",
			"runtimeArgs": ["test"],
			"cwd": "${workspaceFolder}/crypto-investing-platform-web",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
			"name": "Run Backend Tests",
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "bun",
			"runtimeArgs": ["test:be"],
			"cwd": "${workspaceFolder}/crypto-investing-platform-web",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
			"name": "Run Frontend Tests",
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "bun",
			"runtimeArgs": ["test:fe"],
			"cwd": "${workspaceFolder}/crypto-investing-platform-web",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		}
	],
	"compounds": [
		{
			"name": "Next.js: debug full stack + client",
			"configurations": [
				"Next.js: debug full stack"
			],
			"presentation": {
				"hidden": false,
				"group": "",
				"order": 1
			},
			"stopAll": true
		}
	]
}

